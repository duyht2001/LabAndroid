<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F4F4F4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chiều dài cạnh đáy"
        android:textColor="#5A5555"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/nang"
        />

    <EditText
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/black"
        android:ems="7"
        android:minHeight="48dp"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chiều dài cạnh bên"
        android:textColor="#5A5555"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvcao"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:id="@+id/ben"
        android:backgroundTint="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chiều cao"
        android:textColor="#5A5555"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tvcao"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="7"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:id="@+id/cao"
        android:backgroundTint="@color/black"/>
    <Button
        android:id="@+id/chuvi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CFC8C8"
        android:text="Chu vi"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:onClick="setChuvi"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/dientich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CFC8C8"
        android:text="Dien tich"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:onClick="setDientich"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="#5A5555"
        android:layout_gravity="center_horizontal"
        android:id="@+id/KQ"
        android:gravity="center"/>

</LinearLayout>